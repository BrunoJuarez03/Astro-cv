---
import { education } from '../../../cv.json'
import Section from '../Section.astro'
---

<Section title="Educacion">
    <ul>
        {
            education.map(
                ({institution, startDate, endDate, area, exp}) => {
                    return(<li>
                        <article>
                            <header>
                                <div>
                                    <h3>{institution}</h3>
                                    <h4>{area}</h4>
                                </div>
                                <time>
                                    {startDate} - {endDate}
                                </time>
                            </header>
                            <footer>
                                {
                                    exp.map((exp) =>{
                                        return <p>- {exp}</p>
                                    })
                                }
                            </footer>
                        </article>
                    </li>)
                    
                }
            )
        }
    </ul>
</Section>

<style>

    ul{
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    article h3{
        font-weight: 500;
        color: #111;
    }

    article h4{
        font-weight: 400;
        color: #333;
    }

    header{
        display: flex;
        justify-content: space-between;
    }

    footer ul{
        font-size: small;
        color: #666;
    }

    footer li{
        
    }

    time{
        color: #111;
    }

</style>