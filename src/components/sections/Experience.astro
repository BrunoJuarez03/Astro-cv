---
import { work } from '../../../cv.json'
import Section from '../Section.astro'
---

<Section title="Experiencia">
    <ul>
        {
            work.map(
                ({name, startDate, endDate, summary, position, highlights}) => {
                    return(<li>
                        <article>
                            <header>
                                <div>
                                    <h3>{name}</h3>
                                    <h4>{position}</h4>
                                </div>
                                <time>
                                    {startDate} - {endDate}
                                </time>
                            </header>
                            
                            <footer>
                                <p>{summary}</p>
                                <ul>
                                    {
                                        highlights.map((highlights) =>{
                                            return <li>{highlights}</li>
                                        })
                                    }
                                </ul>
                            </footer>
                        </article>
                    </li>)
                    
                }
            )
        }
    </ul>
</Section>

<style>

    ul{
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    article h3{
        font-weight: 500;
        color: #111;
    }

    article h4{
        font-weight: 400;
        color: #666;
    }

    header{
        display: flex;
        justify-content: space-between;
    }

    time{
        color: #111;
    }

    footer p{
        margin: 10px;
        margin-inline: 0;
    }

    footer ul{
        
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 10px;
    }

    footer li{
        border-radius: 6px;
        background-color: #cfcfcf;
        color: #111;
        font-size: 1rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }

</style>