---
import { work } from '../../../cv.json'
import Section from '../Section.astro'
---

<Section title="Experiencia">
    <ul>
        {
            work.map(
                ({name, startDate, endDate, summary, position}) => {
                    return(<li>
                        <article>
                            <header>
                                <div>
                                    <h3>{name}</h3>
                                    <h4>{position}</h4>
                                </div>
                                <time>
                                    {startDate} - {endDate}
                                </time>
                            </header>
                            
                            <footer>
                                
                                <p>{summary}</p>
                            </footer>
                        </article>
                    </li>)
                    
                }
            )
        }
    </ul>
</Section>

<style>

    ul{
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    article h3{
        font-weight: 500;
        color: #111;
    }

    article h4{
        font-weight: 400;
        color: #666;
    }

    header{
        display: flex;
        justify-content: space-between;
    }

    time{
        color: #111;
    }

</style>