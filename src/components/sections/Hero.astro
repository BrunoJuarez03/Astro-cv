---
import { basics } from '../../../cv.json'
import Section from '../Section.astro'
import Mail from '../../icons/Mail.astro'
import GitHub from '../../icons/GitHub.astro'
import LinkedIn from '../../icons/LinkedIn.astro'
import WordlMap from '../../icons/WorldMap.astro'

const {name, label, email, location, phone, summary, url, profiles} = basics
const {address, city, region} = location

const SOCIAL_ICONS: Record<string, any> = {
    GitHub,
    LinkedIn,
    Mail
}

---

<Section>
    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <p>{summary}</p>
            <footer>
                {
                    profiles.map(({ network, url, username})=>{
                        const Icon = SOCIAL_ICONS[network]
                        
                        if(network == 'Mail'){
                            return(
                            <a 
                                href={`mailto:${url}`}
                                title={`Visitar el perfil de ${username} de ${network}`}
                                target="_blank"
                                rel="noopener noreferrer"
                            ><Icon/></a>
                        )
                        }else if(network != 'Mail'){
                           
                           return( <a 
                                href={url}
                                title={`Visitar el perfil de ${username} de ${network}`}
                                target="_blank"
                                rel="noopener noreferrer"
                            ><Icon/></a>)
                        }
                        
                        
                    })
                }
            </footer>
            <span>
                <WordlMap/> {address}, {city}, {region}.
            </span>
        </div>
        <figure>
            <img src="/pic.png" alt="">
        </figure>
        
    </div>
</Section>

<style>
    .container{
        display: flex;
        flex-direction: row;
        align-self: center;
        justify-content: space-between;
        gap: 1rem;
    }

    .info{
        display: flex;
        flex-direction: column;
        gap: .5rem;
    }

    h1{
         font-size: 2.2rem;

    }

    h2{
        color: #444;
        font-size: 1.1rem;
        font-weight: 400;
        text-wrap: balance;
    }

    img{
        aspect-ratio: 1 / 1;
        height: 128px;
        object-fit: cover;
        border-radius: 6px;
        margin-top: 22.5px;
    }
    
    

    span{
        color: #666;
        display: flex;
        align-items: center;
        gap: 0.25rem;
        font-size: 0.85rem;
        letter-spacing: -0.05rem;
    }

    footer{
        display: flex;
        gap: 4px;
        margin-top: 10px;
    }

    footer a{
        color:#777;
        display: inline-flex;
        border: 1px solid #eee;
        align-items: center;
        justify-content: center;
        padding: 4px;
        height: 32px;
        width: 32px;
        border-radius: 6px;
        transition: 0.3s;
    }

    footer a:hover{
        background-color: #dadada;
        transition: 0.3s;
    }


</style>